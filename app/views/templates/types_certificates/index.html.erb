<table ng-show="typesCertificates == 0">
	<tr><td>{{ label.types_certificates.empty_msg }}</td></tr>
</table>
<table ng-init="checkOrdPos(type_cert, 0)" id="types_certificates_list">
	<tr>
		<th>
			<a href ng-click="order(type_cert, 'name', 0, string)">
				<canvas iconordering data-parent="0" data-neighbors="" data-type="type_cert" data-field="name" id="canvas_type_cert_name" width="16" height="16"></canvas>
			</a>
			{{ label.types_certificates.name }}&nbsp;&nbsp;&nbsp;
		</th>
		<th>{{ label.types_certificates.description }}</th>
	</tr>
	<tr class="rows" ng-repeat="typeCert in typesCertificates |  orderObjectBy : orderFuncField(type_cert, 0) : orderFuncReverse(type_cert, 0) : orderFuncType(type_cert, 0)" id="type_certificate_{{typeCert.id}}" data-tags="{{typeCert.tags | tags}}">
		<td><a href ng-click="selectItem(type_cert, typeCert.id)">{{typeCert.name}}</a>&nbsp;&nbsp;&nbsp;</td>
		<td>{{typeCert.description}}</td>
	</tr>
</table>
<table class="noborder">
	<tr ng-repeat="typeCert in typesCertificates" data-tags="{{typeCert.tags | tags}}" class="noborder">
		<td class="noborder">
			<div ng-hide="true">{{ certificates = typeCert.certificates }}</div>
			<div ng-hide="true">{{ type_certificate_id = typeCert.id }}</div>
			<div ng-show="isSelectedItem(type_cert, typeCert.id)" ng-include="'templates/certificates/index.html'"></div>
		</td>
	</tr>
</table>
