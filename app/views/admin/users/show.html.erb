<h2><%= t('admin_user_title') %></h2>

<% if flash[:success] -%>
   <%= content_tag :div, flash[:success], class: :success %>
<% end -%>

<p>
  <strong><%= t('name') %></strong>
  <%= h @user.name %>
</p>
 
<p>
  <strong><%= t('email') %></strong>
  <%= h @user.email %>
</p>

<p>
  <strong><%= t('authToken') %></strong>
  <%= h @user.authentication_token %>
</p>

<p>
<table>
  <tr>
    <td><%= link_to t('back'), controller: "users", action:"index" %></td>
    <td><%= link_to t('edit'), edit_admin_user_path(@user) %></td>
    <td><%= link_to t('change_passwd'), edit_user_registration_path(@user) %></td>
  </tr>
</table>
</p>
